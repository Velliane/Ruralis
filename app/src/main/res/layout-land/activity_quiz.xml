<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/btn_background"
    tools:context=".quiz.QuizActivity">

    <TextView
        android:id="@+id/quiz_question"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:maxLines="10"
        android:text="@string/question"
        android:textSize="28sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/choice_one_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"
        android:padding="10dp"
        android:text="@string/choice_one"
        android:textAppearance="@style/Widget.MaterialComponents.Button"
        android:textSize="@dimen/text_size_connexion_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quiz_question"
        app:layout_constraintBottom_toTopOf="@id/choice_two_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/choice_two_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"
        android:padding="10dp"
        android:text="@string/choice_two"
        android:textAppearance="@style/Widget.MaterialComponents.Button"
        android:textSize="@dimen/text_size_connexion_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_one_btn"
        app:layout_constraintBottom_toTopOf="@id/choice_three_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/choice_three_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"
        android:padding="10dp"
        android:text="@string/choice_three"
        android:textAppearance="@style/Widget.MaterialComponents.Button"
        android:textSize="@dimen/text_size_connexion_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_two_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>